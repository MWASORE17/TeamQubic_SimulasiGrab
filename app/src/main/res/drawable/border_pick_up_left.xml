<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>

            <padding
                android:bottom="0dp"
                android:left="3dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="2dp"
                android:color="@color/blue_900" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:bottom="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>

            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="2dp"
                android:color="@color/blue_900" />
        </shape>
    </item>
</layer-list>